// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ThreatHash {
  id        Int      @id @default(autoincrement())
  hash      String   @unique // SHA-256 of the blocked domain
  source    String   // e.g. "extension-ml", "phishtank", "user-report"
  confidence Float   // 0.0 to 1.0, representing ML certainty or user trust
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SyncLog {
  id        Int      @id @default(autoincrement())
  clientId  String   // Anonymized ID of the extension client
  syncedAt  DateTime @default(now())
  hashCount Int      // How many hashes were sent in this sync
}
